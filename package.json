  "bugs": {
    "url": "https://github.com/ThirstyHead/taiko-book/issues"
  },
  "homepage": "https://github.com/ThirstyHead/taiko-book#readme",
  "dependencies": {
    "npm": "^6.14.6"
  },
  "devDependencies": {
    "asciidoctor": "^2.2.0"
  }
}
